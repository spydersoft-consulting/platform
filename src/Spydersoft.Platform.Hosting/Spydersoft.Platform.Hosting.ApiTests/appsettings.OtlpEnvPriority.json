{
  "AllowedHosts": "*",
  "Logging": {
    "OpenTelemetry": {
      "IncludeFormattedMessage": true,
      "IncludeScopes": true,
      "ParseStateValues": true
    }
  },
  "Serilog": {
    "MinimumLevel": "Information"
  },
  "Telemetry": {
    "ActivitySourceName": "Platform.Test.Activity",
    "Log": {
      "Otlp": {
        "Endpoint": "http://log.localhost:12345",
        "Headers": {
          "Authorization": "Bearer config-token",
          "X-Config-Header": "config-value"
        },
        "Protocol": "http"
      },
      "Type": "otlp"
    },
    "MeterName": "Platform.Test.Meter",
    "Metrics": {
      "Otlp": {
        "Endpoint": "http://metrics.localhost:12345",
        "Headers": {
          "Authorization": "Bearer config-metrics-token"
        },
        "Protocol": "http"
      },
      "Type": "otlp"
    },
    "Trace": {
      "Otlp": {
        "Endpoint": "http://trace.localhost:12345",
        "Headers": {
          "Authorization": "Bearer config-trace-token"
        }
      },
      "Type": "otlp"
    },
    "ServiceName": "Platform.Test"
  }
}
